<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.hanyasoftware.android.smartassistedmotor.motor.MotorActivity">

    <include layout="@layout/view_toolbar" />

    <ImageView
        android:id="@+id/motor_logo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        android:src="@drawable/ic_logo_flat_black"
        android:tint="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/motor_layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/motor_logo"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/motor_textNopol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Nomor Polisi"
            android:textSize="14sp"
            android:textColor="@color/secondaryText"
            />

        <TextView
            android:id="@+id/motor_nopol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="N 1234 AB"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            />

        <TextView
            android:id="@+id/motor_textTipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tipe"
            android:textSize="14sp"
            android:textColor="@color/secondaryText"
            />

        <TextView
            android:id="@+id/motor_tipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Bebek 125"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            />

        <TextView
            android:id="@+id/motor_textTahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tahun"
            android:textSize="14sp"
            android:textColor="@color/secondaryText"
            />

        <TextView
            android:id="@+id/motor_tahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="2012"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            />

        <TextView
            android:id="@+id/motor_textLcMesin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="LC Mesin"
            android:textSize="14sp"
            android:textColor="@color/secondaryText"
            />

        <TextView
            android:id="@+id/motor_lcMesin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="125 CC"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            />

        <TextView
            android:id="@+id/motor_textUkuranRoda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Ukuran Roda"
            android:textSize="14sp"
            android:textColor="@color/secondaryText"
            />

        <TextView
            android:id="@+id/motor_ukuranRoda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="17"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            />


    </LinearLayout>

</RelativeLayout>
