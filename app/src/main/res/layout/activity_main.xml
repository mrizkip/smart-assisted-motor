<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hanyasoftware.android.smartassistedmotor.MainActivity">

    <include layout="@layout/view_toolbar" />

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        android:src="@drawable/ic_logo_flat_black"
        android:tint="@color/colorPrimaryDark" />

    <android.support.v7.widget.CardView
        android:id="@+id/main_cardViewJarakTempuh"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/main_logo"
        >

        <RelativeLayout
            android:id="@+id/main_layoutTextJarak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/main_textJarakTempuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="JARAK TERCAPAI: "
                android:textColor="@color/primaryText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_jarakKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text=" KM"
                android:textColor="@color/primaryText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_jarakTempuh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/main_textJarakTempuh"
                android:layout_toLeftOf="@id/main_jarakKm"
                android:layout_toRightOf="@id/main_textJarakTempuh"
                android:layout_toStartOf="@id/main_jarakKm"
                android:gravity="right"
                android:text="10.000"
                android:textColor="#c40000"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:id="@+id/main_layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/main_cardViewJarakTempuh"
        android:layout_marginTop="10dp">

        <Space
            android:id="@+id/main_centerPosition"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <android.support.v7.widget.CardView
            android:id="@+id/main_cardMotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/main_centerPosition">

            <RelativeLayout
                android:id="@+id/main_motorContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/main_motorIcon"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp"
                    android:src="@drawable/ic_motor_black" />

                <TextView
                    android:id="@+id/main_motorString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_motorIcon"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    tools:text="MOTOR" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/main_cardDiagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/main_centerPosition">

            <RelativeLayout
                android:id="@+id/main_diagnosisContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="?android:selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/main_diagnosisIcon"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_note_pen_black" />

                <TextView
                    android:id="@+id/main_diagnosisString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_diagnosisIcon"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    tools:text="DIAGNOSIS" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/main_cardBengkel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_cardMotor"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/main_centerPosition">

            <RelativeLayout
                android:id="@+id/main_bengkelContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/main_bengkelIcon"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp"
                    android:src="@drawable/ic_map_black_24dp" />

                <TextView
                    android:id="@+id/main_bengkelString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_bengkelIcon"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    tools:text="BENGKEL TERDEKAT"
                    android:gravity="center_horizontal"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/main_cardRiwayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_cardDiagnosis"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/main_centerPosition">

            <RelativeLayout
                android:id="@+id/main_riwayatContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="?android:selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/main_riwayatIcon"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_history_black_24dp" />

                <TextView
                    android:id="@+id/main_riwayatString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_riwayatIcon"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    tools:text="RIWAYAT  SERVICE"
                    android:gravity="center_horizontal"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/main_cardPengaturan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_cardBengkel"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/main_centerPosition">

            <RelativeLayout
                android:id="@+id/main_pengaturanContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/main_pengaturanIcon"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_settings_black_24dp" />

                <TextView
                    android:id="@+id/main_pengaturanString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_pengaturanIcon"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    tools:text="PENGATURAN" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/main_riwayatExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_cardRiwayat"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/main_centerPosition">

            <RelativeLayout
                android:id="@+id/main_exitContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="?android:selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/main_exitIcon"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:padding="2dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_exit_to_app_black_24dp" />

                <TextView
                    android:id="@+id/main_exitString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_exitIcon"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/primaryText"
                    android:textSize="18sp"
                    tools:text="KELUAR" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
