<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.hanyasoftware.android.smartassistedmotor.pengaturan.PengaturanActivity">

    <include layout="@layout/view_toolbar" />

    <ImageView
        android:id="@+id/pengaturan_logo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        android:src="@drawable/ic_logo_flat_black"
        android:tint="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/pengaturan_layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@id/pengaturan_logo"
        android:layout_marginTop="5dp"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            />

        <TextView
            android:id="@+id/pengaturan_alarm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Pengaturan Alarm"
            android:textColor="@color/primaryText"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_alarm_black_24dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:gravity="center_vertical"
            android:background="?android:selectableItemBackground"
            android:paddingLeft="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            />

        <TextView
            android:id="@+id/pengaturan_suara"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Pengaturan Suara"
            android:textColor="@color/primaryText"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_volume_up_black_24dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:gravity="center_vertical"
            android:background="?android:selectableItemBackground"
            android:paddingLeft="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            />

        <TextView
            android:id="@+id/pengaturan_motor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tambah Motor"
            android:textColor="@color/primaryText"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_motor_black"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:gravity="center_vertical"
            android:background="?android:selectableItemBackground"
            android:paddingLeft="5dp"
            />

    </LinearLayout>




</RelativeLayout>
