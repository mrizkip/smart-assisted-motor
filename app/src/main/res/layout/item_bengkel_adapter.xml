<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:id="@+id/itemBengkel_adapter"
    >

    <View
        android:id="@+id/itemBengkel_lineDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemBengkel_lineDivider"
        android:padding="20dp"
        android:background="?android:selectableItemBackground"
        >
        <LinearLayout
            android:id="@+id/itemBengkel_linearLeft"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            >
            <TextView
                android:id="@+id/itemBengkel_merk"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="MERK"
                android:textSize="14sp"
                android:padding="2dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/label_yamaha"
                />

            <TextView
                android:id="@+id/itemBengkel_jarak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1.0 Km"
                android:textSize="14sp"
                android:textColor="@color/secondaryText"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemBengkel_linearRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/itemBengkel_linearLeft"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/itemBengkel_namaBengkel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Bengkel"
                android:maxLines="1"
                android:textSize="14sp"
                android:padding="2dp"
                android:textColor="@color/primaryText"
                android:gravity="start"
                />

            <TextView
                android:id="@+id/itemBengkel_alamatBengkel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Jl. Veteran No. 1"
                android:textSize="14sp"
                android:textColor="@color/secondaryText"
                android:gravity="start"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>