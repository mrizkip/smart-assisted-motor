<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.hanyasoftware.android.smartassistedmotor.BengkelActivity">

    <include
        layout="@layout/view_toolbar" />

    <ImageView
        android:id="@+id/bengkel_logo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        android:src="@drawable/ic_logo_flat_black"
        android:tint="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/bengkel_textBengkelTerdekat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bengkel_logo"
        android:text="Bengkel Terdekat"
        android:textColor="@color/primaryText"
        android:textSize="16sp"
        android:layout_margin="10dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bengkel_recycleViewListBengkel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bengkel_textBengkelTerdekat"
        android:layout_marginTop="10dp"
        >
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
