<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hanyasoftware.android.smartassistedmotor.riwayat.RiwayatActivity">

    <include layout="@layout/view_toolbar" />

    <ImageView
        android:id="@+id/riwayat_logo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        android:src="@drawable/ic_logo_flat_black"
        android:tint="@color/colorPrimaryDark" />

    <RelativeLayout
        android:id="@+id/riwayat_layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/riwayat_logo"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/riwayat_textService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Service Terakhir"
            android:textColor="@color/primaryText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/riwayat_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/riwayat_textService"
            android:layout_marginTop="10dp">

            <TableRow>
                <TextView
                    android:id="@+id/riwayat_tableHeader1"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="SERVICE"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/riwayat_tableHeader2"
                    android:layout_height="30dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="TANGGAL"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/riwayat_tableData1Col1"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center_vertical|start"
                    android:text="1. Ganti Oli"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    />

                <TextView
                    android:id="@+id/riwayat_tableData1Col2"
                    android:layout_height="30dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center_vertical|end"
                    android:text="02 Januari 2018"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    android:paddingRight="5dp"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/riwayat_tableData2Col1"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center_vertical|start"
                    android:text="2. Ganti Busi"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    />

                <TextView
                    android:id="@+id/riwayat_tableData2Col2"
                    android:layout_height="30dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center_vertical|end"
                    android:text="22 Januari 2018"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    android:paddingRight="5dp"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/riwayat_tableData3Col1"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center_vertical|start"
                    android:text="3. Ganti V-Belt"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    />

                <TextView
                    android:id="@+id/riwayat_tableData3Col2"
                    android:layout_height="30dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center_vertical|end"
                    android:text="22 Februari 2018"
                    android:textColor="@color/primaryText"
                    android:textSize="16sp"
                    android:paddingRight="5dp"
                    />
            </TableRow>

        </TableLayout>

    </RelativeLayout>

</RelativeLayout>

