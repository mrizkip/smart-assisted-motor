<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".pengaturan.PengaturanSuaraActivity">

    <include
        android:id="@+id/suara_toolbar"
        layout="@layout/view_toolbar" />

    <TextView
        android:id="@+id/suara_suara"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Pilih Ringtone"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_navigate_next_black_24dp"
        android:gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/line_divider"
        />

    <TextView
        android:id="@+id/suara_tvTeksTerpilih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Ringtone Terpilih"
        android:textColor="@color/primaryText"
        android:textSize="14sp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/suara_ringtone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Default"
        android:textColor="@color/secondaryText"
        android:textSize="18sp"
        android:gravity="center_vertical"
        />

    <Button
        android:id="@+id/suara_buttonSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Simpan"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimary"
        />

</LinearLayout>